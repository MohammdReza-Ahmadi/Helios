@page
@model Users.Pages.Comments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<from>
    <p>
        Tittel: <input type="text" asp-for="SearchString"/>
        <input type="submit" value="Filter"/>
    </p>
</from>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].Tittel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].Rating)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Comment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tittel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
